<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= farm.name %> </title>
</head>

<body>
    <h1><%= farm.name %> </h1>
    <ul>
        <li>City: <%= farm.city %> </li>
        <li>Email: <%= farm.email %> </li>
    </ul>
    <h2>Products</h2>
    <table border="1">
        <thead>
            <tr>
                <th>S.No</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            <% let count = 1 %>
            <% for (let product of farm.products){ %>
            <tr>
                <td><%= count %> </td>
                <td><a href="/products/<%= product._id %> "><%= product.name %></a></td>
                <td><%= product.price %> </td>
                <td><%= product.category %> </td>
            </tr>
            <% count+=1 %>
            <% } %>
        </tbody>
    </table>
    <a href="/farms/<%= farm._id %>/products/new">Add Product</a>
    <a href="/farms">All Farms</a>
    <form action="/farms/<%= farm._id %>?_method=DELETE" method="POST">
        <button>Delete</button>
    </form>
</body>

</html>